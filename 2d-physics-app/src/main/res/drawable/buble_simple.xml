<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

    <item
        android:top="0dp"
        android:left="0dp"
        android:bottom="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">

            <corners android:radius="7dp"/>
            <gradient
                android:angle="90"
                android:endColor="@color/buble_frame_end"
                android:startColor="@color/buble_frame_start"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:left="2dp"
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
</layer-list>